<Page x:Class="NewUI.ApplicationOptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApplicationOptionsPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="OptionsPageStyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
        <StackPanel Height="25" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Width="252" Margin="0,10">
            <Label Content="语言" Width="55"/>
            <ComboBox Width="120"/>
        </StackPanel>
        <CheckBox Style="{StaticResource OptionItem}" Content="开机启动" Margin="5,10,0,10"/>
    </StackPanel>
</Page>
