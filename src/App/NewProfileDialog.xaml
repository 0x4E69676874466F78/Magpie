<UserControl
    x:Class="Magpie.App.NewProfileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Magpie.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<StackPanel MinWidth="498" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Vertical" Spacing="10">
		<TextBlock Text="选择一个窗口" />
		<ListView MaxHeight="282"
				  d:Height="250"
				  BorderThickness="1"
				  CornerRadius="{StaticResource ControlCornerRadius}"
				  BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
				  ItemsSource="{x:Bind CandidateWindows}" />
		<StackPanel Orientation="Horizontal" Spacing="10">
			<TextBlock Text="复制配置文件" VerticalAlignment="Center" />
			<ComboBox DropDownOpened="ComboBox_DropDownOpened" />
		</StackPanel>
	</StackPanel>
</UserControl>
