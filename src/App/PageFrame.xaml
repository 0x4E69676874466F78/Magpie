<UserControl
	x:Class="Magpie.App.PageFrame"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Magpie.App"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	IsTabStop="False"
	Loading="Loading">

	<Grid Margin="20,0,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBlock x:Name="TitleTextBlock" Grid.Row="0" Text="{x:Bind Title, Mode=OneWay}" FontWeight="SemiBold" />

		<ScrollViewer Grid.Row="1" Margin="0,15,0,0" VerticalScrollBarVisibility="Auto" PointerPressed="ScrollViewer_PointerPressed" ViewChanging="ScrollViewer_ViewChanging">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition MaxWidth="1070" Width="*" />
				</Grid.ColumnDefinitions>

				<ContentControl Grid.Column="0" Margin="0,0,20,20" IsTabStop="False"  VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
					<ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{x:Bind MainContent, Mode=OneWay}" />
				</ContentControl>
			</Grid>
		</ScrollViewer>
	</Grid>
</UserControl>
