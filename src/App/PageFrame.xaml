<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Magpie">

	<Style TargetType="local:PageFrame">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:PageFrame">
					<Grid Margin="40,40,0,0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition MaxWidth="1000" Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>

						<TextBlock Grid.Row="0" Text="{TemplateBinding Title}" Margin="0" FontSize="30" FontWeight="Bold" />

						<ScrollViewer Grid.Row="1" Padding="0,0,40,0">
							<ContentPresenter />
						</ScrollViewer>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="IsTabStop" Value="False" />
	</Style>
</ResourceDictionary>
