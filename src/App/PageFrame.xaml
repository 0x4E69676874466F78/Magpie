<!-- 通用页面框架，但切换页面时有闪烁问题 -->
<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Magpie">

	<Style TargetType="local:PageFrame">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:PageFrame">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition MaxWidth="1000" Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>

						<TextBlock Grid.Row="0" Text="{TemplateBinding Title}" Margin="0,0,0,10" FontSize="30" FontWeight="Bold" />

						<ScrollViewer HorizontalAlignment="Stretch" Grid.Row="1" Padding="0,0,40,0">
							<ContentControl VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="0,0,0,10">
								<ContentPresenter />
							</ContentControl>
						</ScrollViewer>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="IsTabStop" Value="False" />
	</Style>
</ResourceDictionary>
