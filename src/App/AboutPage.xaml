<Page x:Class="Magpie.App.AboutPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:local="using:Magpie.App"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">

	<local:PageFrame Title="关于">
		<StackPanel HorizontalAlignment="Stretch"
					Orientation="Vertical">
			<local:SettingsGroup Title="版本"
								 Margin="0,-25,0,0">
				<local:SettingItem Title="Magpie"
								   Description="v0.10.0">
					<local:SettingItem.ActionContent>
						<Button Content="检查更新" />
					</local:SettingItem.ActionContent>
				</local:SettingItem>
				<local:SettingItem Title="自动更新">
					<local:SettingItem.Icon>
						<FontIcon Glyph="&#xE895;" />
					</local:SettingItem.Icon>
					<local:SettingItem.ActionContent>
						<ToggleSwitch />
					</local:SettingItem.ActionContent>
				</local:SettingItem>
			</local:SettingsGroup>
			<local:SettingsGroup Title="反馈">
				<local:SettingItem Title="汇报错误">
					<local:SettingItem.Icon>
						<FontIcon Glyph="&#xEBE8;" />
					</local:SettingItem.Icon>
				</local:SettingItem>
				<local:SettingItem Title="建议功能">
					<local:SettingItem.Icon>
						<FontIcon Glyph="&#xEA80;" />
					</local:SettingItem.Icon>
				</local:SettingItem>
			</local:SettingsGroup>
		</StackPanel>
	</local:PageFrame>
</Page>
